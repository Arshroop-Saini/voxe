# Voxe Backend Environment Variables

# Server Configuration
PORT=3002
NODE_ENV=development
FRONTEND_URL=http://localhost:8081
MOBILE_APP_URL=exp://localhost:8081
BACKEND_URL=http://localhost:3002

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# AI Services (REQUIRED for voice processing and AI agent)
OPENAI_API_KEY=your-openai-api-key
COMPOSIO_API_KEY=your-composio-api-key
COMPOSIO_WEBHOOK_SECRET=your-composio-webhook-secret
COMPOSIO_LOGGING_LEVEL=debug
MEM0_API_KEY=your-mem0-api-key

# Supermemory Configuration (REQUIRED for email embedding)
SUPERMEMORY_API_KEY=your-supermemory-api-key

# Google OAuth (REQUIRED for Google Workspace integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/api/auth/oauth/google/callback

# Notion OAuth (REQUIRED for Notion integration)
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret
NOTION_REDIRECT_URI=http://localhost:3002/api/auth/oauth/notion/callback

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# ElevenLabs Development Settings (REMOVE IN PRODUCTION)
ALLOW_FALLBACK_USER=true
ELEVENLABS_WEBHOOK_SECRET=your_webhook_secret_here
